<p id="notice"><%= notice %></p>

<h1>Login</h1>

<%= form_for(:user, url: sessions_path) do |f| %>

  <div class="field"> 
  	<%= f.label :username %> <br/> 
  	<%= f.text_field :username %> </div>
  
  <br/>

  <div class="field"> 
  	<%= f.label :password %> <br/> 
  	<%= f.password_field :password %></div>

  <div class="actions"> 
  	<%= f.submit "Login" %>  
  </div>
<br>
<%= link_to 'Create New User', new_user_path %>
<% end %>